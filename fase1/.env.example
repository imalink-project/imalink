# Environment variables for ImaLink Fase 1
# Copy this file to .env and fill in your actual values

# Database (WSL/Linux paths)
DATABASE_URL=sqlite:////mnt/c/temp/00imalink_data/imalink.db

# File paths (WSL/Linux paths)
IMAGE_POOL_DIRECTORY=/mnt/c/temp/00imalink_data/imalink_pool

# Image processing settings
POOL_QUALITY=85

# Development
DEBUG=True
LOG_LEVEL=INFO

# Testing - Set to True to disable authentication (for easier testing)
# WARNING: Only use this in development/testing, NEVER in production!
DISABLE_AUTH=False

# Optional: Cloud storage (leave empty to use local only)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=your_bucket_name

# Optional: Email notifications  
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Optional: External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
OPENAI_API_KEY=your_openai_key_here